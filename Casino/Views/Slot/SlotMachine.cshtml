@model Casino.ViewModels.SlotMachine.SlotStartViewModel

@{ ViewData["Title"] = "Home Page"; }

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <h3>Start Playing</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <form asp-controller="Slot" asp-action="SpinTheSlot" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="BetSize"></label>
                <input asp-for="BetSize" type="number" class="form-control" id="betSize" aria-describedby="betSize" placeholder="Place your bet">
                <span asp-validation-for="BetSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BalanceUpdate"></label>
                <input asp-for="BalanceUpdate" type="number" class="form-control" id="balanceUpdate" aria-describedby="balanceUpdate" placeholder="Enter new account balance (optional)">
                <span asp-validation-for="BalanceUpdate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="float: left;">Spin</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
